.step
  %p
    = f.label :name
    = f.text_field :name
    = f.error :name
  %p
    = f.label :start
    = f.text_field :start, :class => 'datetime'
    = f.error :start
  %p
    = f.label :min_length
    = f.text_field :min_length
    = f.error :min_length
  %p
    = f.label :max_length
    = f.text_field :max_length
    = f.error :max_length
